new robot misterRobot14
    
    defop _addAbs a as integer, b as integer returns integer
        If a returns integer
            Is lesser 0
            + (- a) (If b returns integer
                Is lesser 0   - b -> Out
                Default b -> Out)
			-> Out
            Default + a (If b returns integer
                Is lesser 0  -b -> Out
                Default b -> Out)
			-> Out
		-> Out
	
    defcom Init
        Let a be integer
        Let b be integer
        Assign 41 a
        Assign 42 b
        "|" -> + a -> + " " -> + b -> + "|" 
        -> + " = " -> + (_addAbs a b) -> Print

end
